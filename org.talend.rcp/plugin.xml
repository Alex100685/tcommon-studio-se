<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.talend.rcp.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.talend"
            class="org.talend.rcp.perspective.Perspective"
            id="org.talend.rcp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="org.talend.rcp.intro">
      </intro>
      <introProductBinding
            introId="org.talend.rcp.intro"
            productId="org.talend.rcp.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="org.talend.rcp.intro"
            content="introContent.xml"
            id="org.talend.rcp.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
<extension
      id="product"
      point="org.eclipse.core.runtime.products">
   <product
         application="org.talend.rcp.application"
         name="Talend">
      <property
            name="startupForegroundColor"
            value="000000"/>
      <property
            name="startupMessageRect"
            value="7,220,441,20"/>
      <property
            name="startupProgressRect"
            value="0,280,455,15"/>
      <property
            name="windowImages"
            value="icons/designer32x32.gif"/>
      <property
            name="aboutImage"
            value="icons/about.gif"/>
      <property
            name="aboutText"
            value="%productBlurb"/>
   </product>
</extension>
<extension
      point="org.eclipse.ui.commands">
   <category
         id="talend"
         name="Talend"/>
   <command
         categoryId="talend"
         id="showRunProcessView"
         name="Show run process view"/>
   <command
         categoryId="talend"
         id="showPropertiesView"
         name="Show properties view"/>
   <command
         categoryId="talend"
         id="showProblemsView"
         name="Show problems view"/>
   <command
         categoryId="talend"
         id="showModulesView"
         name="Show modules view"/>
</extension>
<extension
      point="org.eclipse.ui.contexts">
   <context
         id="talend.global"
         name="Default"
         parentId="org.eclipse.ui.contexts.window"/>
</extension>
<extension
      point="org.eclipse.ui.bindings">
   <key
         commandId="showRunProcessView"
         contextId="talend.global"
         schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
         sequence="F4"/>
   <key
         commandId="showPropertiesView"
         contextId="talend.global"
         schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
         sequence="F3"/>
   <key
         commandId="showProblemsView"
         contextId="talend.global"
         schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
         sequence="CTRL+F1"/>
   <key
         commandId="showModulesView"
         contextId="talend.global"
         schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
         sequence="CTRL+F2"/>
</extension>
</plugin>
