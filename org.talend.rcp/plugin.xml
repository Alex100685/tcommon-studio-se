<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.talend.rcp.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.talend.rcp.perspective.Perspective"
            icon="icons/appli_16x16.png"
            id="org.talend.rcp.perspective"
            name="Design Workspace">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            icon="icons/appli_16x16.png"
            id="org.talend.rcp.intro">
      </intro>
      <introProductBinding
            introId="org.talend.rcp.intro"
            productId="org.talend.rcp.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="org.talend.rcp.intro"
            content="introContent.xml"
            id="org.talend.rcp.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
<extension
      id="product"
      point="org.eclipse.core.runtime.products">
   <product
         application="org.talend.rcp.application"
         name="%productName">
      <property
            name="startupForegroundColor"
            value="ffffff"/>
      <property
            name="startupMessageRect"
            value="7,168,441,20"/>
      <property
            name="startupProgressRect"
            value="7,188,441,15"/>
      <property
            name="windowImages"
            value="icons/appli_16x16.gif,icons/appli_32x32.gif,icons/appli_48x48.gif"/>
      <property
            name="aboutImage"
            value="icons/about.gif"/>
      <property
            name="aboutText"
            value="%productBlurb"/>
      <property
            name="preferenceCustomization"
            value="plugin_customization.ini"/>
   </product>
</extension>
<extension
      point="org.eclipse.ui.commands">
   <category
         id="talend"
         name="Talend"/>
</extension>
<extension
      point="org.eclipse.ui.contexts">
   <context
         id="talend.global"
         name="Default"
         parentId="org.eclipse.ui.contexts.window"/>
</extension>
<extension
      point="org.talend.core.talendperspectives">
   <TalendPerspective
         refPerspectiveId="org.talend.rcp.perspective"
         talendPerspectiveId="org.talend.rcp.DesignPerspective"/>
   <TalendPerspective
         refPerspectiveId="org.eclipse.debug.ui.DebugPerspective"
         talendPerspectiveId="org.talend.rcp.DebugPerspective"/>
</extension>
</plugin>
