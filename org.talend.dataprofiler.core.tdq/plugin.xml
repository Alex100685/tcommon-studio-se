<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>   
      <extension point="org.eclipse.ui.preferencePages">
       <page 
         name="Dataprofiler"
         class="org.talend.dataprofiler.core.tdq.ui.pref.DataprofilerSettingPage"
         id="org.talend.dataprofiler.core.tdq.ui.pref.DataprofilerSettingPage">
       </page>     
      </extension>
   
    <extension
         point="org.talend.dataprofiler.core.service">
      <Service
            class="org.talend.dataprofiler.core.tdq.service.ReportingFilterService"
            serviceId="org.talend.dataprofiler.core.service.IViewerFilterService">
      </Service>
   </extension>
   
   <!-- Resource Content--> 
   <extension  
         point="org.eclipse.ui.navigator.navigatorContent">
         <actionProvider
            class="org.talend.dataprofiler.core.tdq.ui.action.provider.NewReportActionProvider"
            id="org.talend.dataprofiler.core.tdq.ui.action.provider.NewReportActionProvider">
         <enablement>
            <or>
               <adapt
                     type="org.eclipse.core.resources.IFolder">
               </adapt></or>
         </enablement>
      </actionProvider> 
      
      <actionProvider
            class="org.talend.dataprofiler.core.tdq.ui.action.provider.HistorizeReportProvider"
            id="org.talend.dataprofiler.core.tdq.ui.action.provider.HistorizeReportProvider">
         <enablement>
            <and>
	            <instanceof value="org.eclipse.core.resources.IFile"/>
            	<test property="org.eclipse.core.resources.name" value="*.rep"/>	
	        </and>
         </enablement>
      </actionProvider>          
   </extension>
   
    <extension
         point="org.eclipse.ui.navigator.viewer">
       <viewerActionBinding
             viewerId="org.talend.dataprofiler.core.ui.views.DQRespositoryView">
          <includes>
             <actionExtension pattern="org.talend.dataprofiler.core.tdq.ui.action.provider.*" />
          </includes>
       </viewerActionBinding>  
   </extension>
   
</plugin>
