<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">


	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>

	<files> <!-- for templates -->
		<file><!-- sh -->
			<source>${project.resources.path}/templates/Job_run_template.sh</source>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<destName>${talend.job.name}_run.sh</destName>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
			<filtered>true</filtered>
		</file>
		<file> <!-- bat -->
			<source>${project.resources.path}/templates/Job_run_template.bat</source>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<destName>${talend.job.name}_run.bat</destName>
			<filtered>true</filtered>
		</file>
        <file> <!-- jobInfo.properties -->
            <source>${project.resources.path}/templates/jobInfo_template.properties</source>
            <outputDirectory>.</outputDirectory>
            <destName>jobInfo.properties</destName>
            <filtered>true</filtered>
        </file>
	</files>

	<fileSets>
		<fileSet> <!-- add jar of job -->
			<directory>${project.build.directory}</directory>
			<outputDirectory>${project.artifactId}</outputDirectory>
			<includes>
				<include>${project.build.finalName}.jar</include>
			</includes>
		</fileSet>
		<fileSet><!-- add the lib of dependences -->
			<directory>${project.build.directory}/lib</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet><!-- src sources -->
			<directory>.</directory>
			<outputDirectory>${project.artifactId}/src/${talend.job.path}/</outputDirectory>
			<includes>
				<include>*.java</include>
			</includes>
		</fileSet>
		<fileSet><!-- Context properties -->
			<directory>${project.resources.path}/${talend.job.path}/contexts</directory>
			<outputDirectory>${project.artifactId}/${talend.job.path}/contexts</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>