<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.talend.core.service">
      <Service
            class="org.talend.librariesmanager.model.service.LibrariesService"
            serviceId="ILibrariesService"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
     <view
           category="org.talend.core.root"
           class="org.talend.librariesmanager.ui.views.ModulesView"
           icon="icons/modules_view.gif"
           id="org.talend.designer.codegen.perlmodule.ModulesView"
           name="Modules"/>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="talend.modules"
            name="Modules view"
            parentId="org.eclipse.ui.contexts.window"/>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
   <command
            categoryId="talend"
            id="refreshModules"
            name="Refresh modules"/>
   <command
         categoryId="talend"
         id="showModulesView"
         name="Show modules view"/>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="refreshModules"
            contextId="talend.modules"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F5"/>
      <key
         commandId="showModulesView"
         contextId="talend.global"
         schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
         sequence="CTRL+F2"/>
   </extension>
   <extension
         point="org.talend.core.global_actions">
      <GlobalAction class="org.talend.librariesmanager.ui.actions.ShowModulesViewAction"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.talend.core.prefs"
            class="org.talend.librariesmanager.prefs.LibrariesMainPreferencesPage"
            id="org.talend.librariesmanager.mainpage"
            name="%preferencespage.main"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.talend.librariesmanager.prefs.PreferenceInitializer"/>
   </extension>
   <extension
         point="org.talend.core.routines_provider">
      <RoutinesProvider
            class="org.talend.librariesmanager.model.service.TosRoutinesProviderCreator">
      </RoutinesProvider>
   </extension>
</plugin>
