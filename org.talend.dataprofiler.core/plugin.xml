<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="org.talend.dataprofiler.core">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="org.talend.dataprofiler.core"
            class="org.talend.dataprofiler.core.views.SampleView"
            id="org.talend.dataprofiler.core.views.SampleView">
      </view>
   </extension>   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="DataProfiler Perspective"
            class="org.talend.dataprofiler.core.ui.Perspective"
            id="org.talend.dataprofiler.core.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.talend.dataprofiler.core.perspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.talend.dataprofiler.core.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
