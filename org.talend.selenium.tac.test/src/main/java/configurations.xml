<suite name="Suite" parallel="false">

	<!-- command line parameters -->
	<parameter name="commandline.conf.primary.host" value="127.0.0.1" />
	<parameter name="commandline.conf.primary.port" value="8002" />
	<parameter name="commandline.conf.primary.archivePath" value="c:/Talend/CommandLine/exports" />
	<parameter name="commandline.conf.secondary.host" value="127.0.0.1" />
	<parameter name="commandline.conf.secondary.port" value="8003" />
	<parameter name="commandline.conf.secondary.archivePath"
		value="c:/Talend/CommandLine/exports" />

	<!-- Ldap parameters -->
	<parameter name="LDAP.conf.useLDAPAutentication" value="true" />
	<parameter name="LDAP.conf.ldapServerIp" value="192.168.0.27" />
	<parameter name="LDAP.conf.ldapServerPort" value="389" />
	<parameter name="LDAP.conf.ldapRoot" value="dc=talend,dc=com" />
	<parameter name="LDAP.conf.ldapPrincipalDNPrefix" value="cn=Manager,dc=talend,dc=com" />
	<parameter name="LDAP.conf.ldapAdminPassword" value="talend" />
	<parameter name="LDAP.conf.ldap.fields.mail" value="mail" />
	<parameter name="LDAP.conf.ldap.fields.lastname" value="givenName" />
	<parameter name="LDAP.conf.ldap.fields.firstname" value="homePhone" />

	<!-- Log4j parameters -->
	<parameter name="log4j.conf.logsPath" value="C:\Talend\TacLogs" />

	<!-- SMTP parameters -->
	<parameter name="smtp.conf.useSmtp" value="true" />
	<parameter name="smtp.conf.mailServerHost" value="smtp.163.com" />
	<parameter name="smtp.conf.mailServerPort" value="25" />
	<parameter name="smtp.conf.mailUserName" value="lindy512" />
	<parameter name="smtp.conf.mailPassword" value="talend" />
	<parameter name="smtp.conf.serverRequireSSL" value="false" />

	<!-- soaManager parameters -->
	<parameter name="soaManager.conf.jobsDeployPath" value="c:/soaDeploy" />
	<parameter name="soaManager.conf.serverAddress" value="127.0.0.1" />
	<parameter name="soaManager.conf.serverPort" value="8004" />

	<!-- svn parameters -->
	<parameter name="svn.conf.serverLocationURL" value="https://192.168.0.245:8443/svn/auto/" />
	<parameter name="svn.conf.serverUser" value="tisadmin" />
	<parameter name="svn.conf.serverPassword" value="tisadmin" />

	<!-- Talend suite parameters -->
	<parameter name="suite.link.dqportal" value="testDqportalLink" />
	<parameter name="suite.link.drools" value="testDroolsLink" />
	<parameter name="suite.link.mdm" value="testMdmLink" />

	<!-- Ldap user dn parameters -->
	<parameter name="ldap.user.dn" value="uid=tod, ou=People, dc=talend,dc=com" />
	<parameter name="ldap.user.userName" value="liuyu@sina.com" />

	
		<test name="TestConfigurations"> <classes> <class
		name="com.talend.cases.configuration.TestConfigurations" /> </classes>
		</test>
	

	<test name="TestCreateLdapUser">
		<classes>
			<class name="com.talend.cases.configuration.TestAddLdapUser" />
		</classes>
	</test>

	<test name="TestLoginWithLdapUser">
		<classes>
			<parameter name="userName" value="liuyu@sina.com" />
			<parameter name="userPassword" value="123456" />
			<class name="com.talend.tac.cases.TestLogin">
				<methods>
					<include name="testLogin" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="TestLoginWithNormalUserAfterLdapEnabled">
		<classes>
			<class name="com.talend.tac.cases.TestLogin">
				<methods>
					<include name="testLogin" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="TestConfigurationsToDisableLdap">
		<classes>
			<parameter name="LDAP.conf.useLDAPAutentication" value="false" />
			<class name="com.talend.cases.configuration.TestConfigurations">
				<methods>
					<include name="testSetLDAP" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test name="TestLoginWithNormalUserAfterLdapDisabled">
		<classes>
			<class name="com.talend.tac.cases.TestLogin">
				<methods>
					<include name="testLogin" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test name="TestLoginWithLdapUserAfterLdapDisabled">
		<classes>
			<parameter name="userName" value="liuyu@sina.com" />
			<parameter name="userPassword" value="123456" />
			<class name="com.talend.tac.cases.TestLogin">
				<methods>
					<include name="testLoginWithLdapUserWhenLdapIsDisabled" />
				</methods>
			</class>
		</classes>
	</test>

</suite>
