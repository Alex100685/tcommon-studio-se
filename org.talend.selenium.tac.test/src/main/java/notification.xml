<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test_task" parallel="false">


    <test name="notification" preserve-order="true"> 

        
        <!-- add notification -->
        <parameter name="categoryUser" value="Users"/>
        <parameter name="eventNewUser" value="MailNewUserNotification"/>
        <parameter name="descriptionNewUser" value="Send a mail when to a new user at creation"/>
        
        <parameter name="eventUserCreation" value="UserCreationNotification"/>
        <parameter name="descriptionUserCreation" value="Suscribe to receive a mail when a user is created"/>
        
        <parameter name="eventUserDeletion" value="UserDeletionNotification"/>
        <parameter name="descriptionUserDeletion" value="Subscribe to receive a mail when a user is deleted"/>
        
        <parameter name="categoryTask" value="Tasks"/>
        <parameter name="eventTaskFailed" value="TaskFailedNotification"/>
        <parameter name="descriptionTaskFailed" value="Suscribe to receive a mail when specified tasks failed"/>
        
        <parameter name="categoryJobServer" value="JobServers"/>
        <parameter name="eventJobServerAlert" value="JobServerAlertNotification"/>
        <parameter name="descriptionJobServerAlert" value="Subscribe to receive a mail when jobserve has changed status"/>
        <!-- add notification -->
        
        <classes>  
       <!--  
            ***add user'notification and task'notification>>>Chaotic business***
            -->   
            <class name="com.talend.tac.cases.notification.TestAddUsersNotification"/> 
            <class name="com.talend.tac.cases.notification.TestAddTasksNotification">
                <methods>
                    <exclude name="testAddTaskFailedNotification"></exclude>
                    <exclude name="testAddTaskNotificationUncheckActive"></exclude>
                </methods>
            </class>
            <class name="com.talend.tac.cases.notification.TestAddJobserverNotification"/>
            <class name="com.talend.tac.cases.notification.TestDeleteNotification"/>
            
        </classes> 
	</test>
	
</suite>


